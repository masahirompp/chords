<% extend 'layout' %>
<div id="container" class="container-fluid">
  <form role="form" action="/auth/register" method="post" class="form-signin">
    <h2 class="form-signin-heading">Chord Kitchen</h2>

    <% if @message_warning?.length : %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span
        class="sr-only">Close</span></button>
      <%- @message_warning %>
    </div>
    <% end %>

    <div class="form-group">
      <label for="displayName">ニックネーム</label>
      <input id="displayName" type="text" name="displayName" placeholder="コードキッチン" required="required"
             class="form-control" value="<%- @user.displayName %>">
    </div>
    <div class="form-group">
      <label for="email">メールアドレス</label>
      <input id="email" type="email" name="email" placeholder="example@chordkitchen.net"
             autofocus="autofocus" class="form-control" value="">
    </div>
    <button type="submit" class="btn btn-lg btn-primary btn-block">はじめる</button>
  </form>
  <div class="footer">
    <p class="text-right">Copyright @2014 ChordKitchen</p>
  </div>
</div>
